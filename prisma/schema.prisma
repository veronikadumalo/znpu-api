// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator pothos {
  provider = "prisma-pothos-types"
}


model Deparments {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  persons Person[]
}

model Person {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  email String
  avatar String?
  deparmentId String 
  deparment Deparments @relation(fields: [deparmentId], references: [id])
}

model MenuCategory {
  id String @id @default(uuid())
  title String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  subcategories MenuSubcategory[]
}

model MenuSubcategory {
  id String @id @default(uuid())
  title String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  categoryId String
  category MenuCategory @relation(fields: [categoryId], references: [id])
  files File[]
}

model File {
  id String @id @default(uuid())
  title String
  url String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  subcategoryId String
  subcategory MenuSubcategory @relation(fields: [subcategoryId], references: [id])
}

model News {
  id String @id @default(uuid())
  title String
  subtitle String
  description String
  imageUrl String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PageInfo {
  id String @id @default(uuid())
  uaAddress String
  plAddress String
  phoneNuber String
  email String
  additionalEmail String
  facebookLink String
  uaPageTitle String
  plPageTitle String 
}

model HomePageContent{
  id String @id @default(uuid())
  type String @unique
  homeTitle String
  pageTitle String
  shortDescription String
  longDescription String
  imageUrl String
}

model Event{
  id String @id @default(uuid())
  type String @unique
  title String
  shortDescription String
  longDescription String
  images String[]
  createdAt DateTime @default(now())
  customerDate String
}








